    <item>
        <shape android:shape="rectangle">
            <solid android:color="#141822" /> <!-- Warna latar belakang #1418 -->
            <corners android:radius="20dp" /> <!-- Corner radius 20dp -->
        </shape>
    </item>

    <!-- Shadow -->
    <item android:right="10dp" android:left="10dp" android:top="10dp" android:bottom="10dp">
        <shape android:shape="rectangle">
            <solid android:color="#00ffffff" /> <!-- Warna latar belakang transparan -->
            <corners android:radius="20dp" /> <!-- Corner radius 20dp -->
        </shape>
    </item>

